<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="author" content="Matthew Lawrence">
  <meta name="description" content="An online chat application for gamers."
  <!-- Favicon -->
  <link rel="icon" type="image/ico" href="images/favicon.ico"/>
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@600&family=Roboto+Condensed:wght@700&family=Roboto:wght@300&display=swap" rel="stylesheet">
  <!--Font Awesome-->
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
  <!-- Bootstrap -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">


  <script type="text/javascript" src="/socket.io/socket.io.js"></script>

  <title>Gamer Gabble</title>
</head>
<body>


  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand " id="logo" href="/">Gamer Gabble</a>
        <a class="nav-link" aria-label="Twitch"href="https://www.twitch.tv/" target="_blank">
          <i class="fab fa-twitch fontAwesome"></i>
        </a>
        <a class="nav-link" aria-label="Steam" href="https://store.steampowered.com/" target="_blank">
          <i class="fab fa-steam fontAwesome"></i>
        </a>
        <a class="nav-link" aria-label="XBox" href="https://www.microsoft.com/en-us/store/b/xbox" target="_blank">
          <i class="fab fa-xbox fontAwesome"></i>
        </a>
        <a class="nav-link" aria-label="PlayStation" href="https://www.playstation.com/en-us/ps5/" target="_blank">
          <i class="fab fa-playstation fontAwesome"></i>
        </a>
        <a class="nav-link" aria-label="Nintendo" href="https://www.nintendo.com/switch/" target="_blank">
          <i class="fas fa-gamepad fontAwesome"></i>
        </a>

        <ul class="navbar-nav mr-auto">
        </ul>
        {{#if logged_in}}
          <button class="btn btn-outline-success my-2 my-sm-0" id="logout" type="submit">Log Out</button>
        {{else}}
          <a href="/loginPage" class="text-white-50 fw-bold">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Log In</button>
          </a>

        {{/if}}

    </nav>
  </header>

<div class= "mainImg mobile">
  <img src="/images/virBackgroundResize.jpg" alt="Gamer Dark">
</div>
<div class= "mainImg desktop">
  <img src="/images/background-resize.jpg"  alt="Gamer Dark">
</div>

  <div class="container" id="mainWindow">
    {{{body}}}
  </div>

</body>
  <!-- query string selector -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.10.3/qs.min.js" integrity="sha512-juaCj8zi594KHQqb92foyp87mCSriYjw3BcTHaXsAn4pEB1YWh+z+XQScMxIxzsjfM4BeVFV3Ij113lIjWiC2w==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <!-- added to connect to socket.io -->
  <script type="text/javascript" src="/socket.io/socket.io.js"></script>
  

  {{#if logged_in}}
  <script type="text/javascript" src="/js/logout.js"></script>
  {{/if}}
  {{#if chat_on}}
  <script src="/js/main.js"></script>
  {{/if}}
  {{#if signUpProfile}}
  <script src="/js/signUpProfile.js"></script>
  {{/if}}
  {{#if loginPage}}
  <script src="/js/login.js"></script>
  {{/if}}

</html>